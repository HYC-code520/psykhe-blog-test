---
// ProfileTrait.astro - Converted from Vue component
export interface Props {
  slug: string;
  active: boolean;
  label: string;
  scoreRounded: string;
  scoreHuman: string;
  scorePercentage: string;
}

const { slug, active, label, scoreRounded, scoreHuman, scorePercentage } = Astro.props;
---

<div class="profile-trait-section">
  <div 
    id={`profile-tab-${slug}`} 
    class={`tab-pane show profile-tab ${active ? 'active' : ''}`} 
    role="tabpanel"
  >
    <!-- Bootstrap 'row' -> Tailwind flexbox -->
    <div class="flex flex-wrap -mx-4">
      <!-- Bootstrap 'col' -> Tailwind flex column with padding -->
      <div class="w-full px-4">
        <h3 class="mob-hide-sm trait-title">You scored {scoreHuman} on {label}</h3>
        <slot />
      </div>
    </div>
  </div>
  <!-- Bootstrap hr -> Tailwind border -->
  <hr class="border-t border-gray-300 my-4" />
  <div class="legend">
    <span>HIGH = 5</span>
    <span>MODERATE-HIGH = 4</span>
    <span>MODERATE = 3</span>
    <span>MODERATE-LOW = 2</span>
    <span>LOW = 1</span>
  </div>
</div>
