---
// Navbar component with exact styling from about page
---

<div class="navbar-wrapper">
  <div class="brand">
    <a href="/">PSYKHE AI</a>
  </div>
</div>

<style lang="scss">
// Import the variables from the correct new path
@import '../styles/base/_variables.scss';

// Remove the redundant mixin since it's already in _variables.scss
// @mixin media-breakpoint-up($breakpoint) { ... } ‚Üê Remove this

.navbar-wrapper {
  background: white;
  width: 100%;
  margin: 0;
  padding: 0;
}

.brand {
  max-width: 1500px;
  margin: 0 auto;
  padding: 0;
  text-align: left;

  a {
    font-size: 2rem;
    background-image: url(/media/brand/logoword-dark-ai.png);
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: 0 5px;
    color: rgba(0, 0, 0, 0);
    text-decoration: none;

    &:active,
    &:focus,
    &:hover,
    &:visited {
      color: rgba(0, 0, 0, 0);
    }

    padding: 0;
    display: inline-block;
    width: 185px;

    margin-left: 1rem;
    margin-top: 1rem;

    @include media-breakpoint-up(md) {
      width: 240px;
      top: -15px !important;
      background-position: top center;
    }
  }
}
</style>
