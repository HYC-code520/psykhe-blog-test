---
import { glossaryEntries } from '../../data/glossary';
import Layout from '../../layouts/Layout.astro';

// Group entries by first letter
const groupedEntries = glossaryEntries.reduce((acc, entry) => {
  const firstLetter = entry.title.charAt(0).toUpperCase();
  if (!acc[firstLetter]) {
    acc[firstLetter] = [];
  }
  acc[firstLetter].push(entry);
  return acc;
}, {} as Record<string, typeof glossaryEntries>);

// Sort letters and entries
const sortedLetters = Object.keys(groupedEntries).sort();
sortedLetters.forEach(letter => {
  groupedEntries[letter].sort((a, b) => a.title.localeCompare(b.title));
});
---

<Layout title="Personalization Glossary | PSYKHE">
  <div class="container">
    <div class="header">
      <h1>Personalization Glossary</h1>
      <p>
        At PSYKHE, we're obsessed with the why: Why do we like the things we like? 
        Understanding all the factors that drive individual taste enables us to create 
        the world's most sophisticated recommendation engine.
      </p>
    </div>
    
    <div class="sections">
      {sortedLetters.map(letter => (
        <div class="section">
          <h2 class="letter">{letter}</h2>
          {groupedEntries[letter].map(entry => (
            <div class="entry" id={entry.slug}>
              <a href={`/glossary/${entry.slug}/`}>
                <h3 class="entry-title">{entry.title}</h3>
              </a>
              {entry.paragraphs.map(paragraph => (
                <p class="entry-paragraph">{paragraph}</p>
              ))}
            </div>
          ))}
        </div>
      ))}
    </div>
    
    <div class="take-test-row">
      <a class="btn-home-tan" href="/">FIND OUT MORE</a>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  .header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .letter {
    font-size: 2rem;
    font-weight: bold;
    margin: 2rem 0 1rem 0;
    border-bottom: 2px solid #ddd;
  }
  .entry {
    margin-bottom: 2rem;
  }
  .entry-title {
    color: #0066cc;
    text-decoration: none;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .entry-title:hover {
    text-decoration: underline;
  }
  .entry-paragraph {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  .btn-home-tan {
    display: inline-block;
    background: #tan;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    margin: 2rem auto;
  }
  .take-test-row {
    text-align: center;
    margin-top: 3rem;
  }
</style>