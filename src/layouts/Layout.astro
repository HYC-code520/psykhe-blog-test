---
// Remove this import
// import { ViewTransitions } from 'astro:transitions';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Remove ViewTransitions -->
		<!-- <ViewTransitions /> -->
	</head>
	<body>
		<!-- Remove the main wrapper entirely -->
		<slot />
	</body>
</html>

<style lang="scss" is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	
	@import '../styles/global.css';
	@import '../styles/app.scss';
	
	html, body {
		margin: 0;
		padding: 0;  /* Add this to ensure no padding */
		width: 100%;
		height: 100%;
	}

	/* Keep smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Remove all page transition styles */
	/*
	@view-transition {
		navigation: auto;
	}

	.page-transition {
		view-transition-name: main;
	}
	*/

	/* Keep anchor scrolling offsets */
	[id] {
		scroll-margin-top: 20px;
	}

	.signup-outer,
	#signup {
		scroll-margin-top: 30px;
	}
</style>
